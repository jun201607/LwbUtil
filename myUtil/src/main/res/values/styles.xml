    <!-- content item <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<< -->

    <style name="content_item_remind_tv">
        <item name="android:layout_height">@dimen/page_drag_max_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="content_item_remind_tv_rt" parent="content_item_remind_tv">
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="content_item_remind_tv_black" parent="content_item_remind_tv">
        <item name="android:textColor">@color/gray_4</item>
    </style>

    <style name="content_item">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">@dimen/Img_big</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_item_to_alpha</item>
    </style>

    <style name="content_item_white" parent="content_item">
        <item name="android:background">@drawable/bg_white_to_gray</item>
    </style>

    <style name="content_item_big" parent="content_item">
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="content_item_lf">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="content_item_lf_img" parent="text">
        <item name="android:paddingRight">@dimen/space_line</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="content_item_big_lf_img" parent="content_item_lf_img">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:paddingRight">@dimen/space_line</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="content_item_rt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>



    <style name="edit_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white_selected</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="edit_item_white" parent="edit_item">
        <item name="android:background">@drawable/bg_white_to_gray</item>
    </style>

    <style name="edit_item_left_tv" parent="edit_item">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLength">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#2b2b2b</item>
