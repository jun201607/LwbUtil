    <style name="translucentAnimation">

        <!-- 切入切出时也会进行的动画，当底部界面均为透明界面时，动画会被桌面遮挡 -->
        <!--
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/transparent_to_zero</item>
        -->

        <!-- 若底部界面均为透明界面时，以下动画会失效，也会受其他应用影响 -->
        <item name="android:activityOpenEnterAnimation">@anim/right_push_in</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_push_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade</item>
    </style>

    <style name="menu_animation">
        <item name="android:windowEnterAnimation">@anim/menu_appear</item>
        <item name="android:windowExitAnimation">@anim/menu_disappear</item>
    </style>


