<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_line"
        android:padding="@dimen/space_line"
        app:cardCornerRadius="@dimen/space_line"
        app:cardElevation="@dimen/space_line">
            <ImageView
                android:id="@+id/img_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hover_button" />
            <TextView
                android:id="@+id/tv_cardview_title"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/titleName" />
    </android.support.v7.widget.CardView>
</LinearLayout>